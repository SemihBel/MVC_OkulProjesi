@using MVC_OkulProjesi.Models.EntityFramework
@model List<TBLKULUPLER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>KULÜP ID</th>
        <th>KULÜP ADI</th>
        <th>İŞLEMLER</th>
    </tr>
    <tbody>
        @foreach (var klp in Model)
        {
        <tr>
            <td>@klp.KULUPID</td>
            <td>@klp.KULUPAD</td>
            <td><a href="/Kulup/Sil/@klp.KULUPID" class="btn btn-danger btn btn-sm">Sil</a>&nbsp;
            <a href="/Kulup/KulupGetir/@klp.KULUPID" class="btn btn-success btn btn-sm">Güncelle</a></td>

        </tr>
        }
    </tbody>
</table>

<a href="/Kulup/YeniKulup" class="btn btn-primary">Yeni Kulüp Kaydı</a>


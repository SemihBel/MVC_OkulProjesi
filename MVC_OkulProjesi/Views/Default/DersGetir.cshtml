@model MVC_OkulProjesi.Models.EntityFramework.TBLDERSLER
@{
    ViewBag.Title = "DersGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ders Güncelleme Sayfası</h2>

@using (Html.BeginForm("Guncelle", "Default", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.DERSAD)
        @Html.TextBoxFor(m => m.DERSAD, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.DERSID)
    <div style="margin-top:10px">
        <button class="btn btn-info btn btn-sm">Güncelle</button>
    </div>
}


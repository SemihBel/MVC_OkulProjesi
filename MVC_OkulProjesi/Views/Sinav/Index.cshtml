@using MVC_OkulProjesi.Models.EntityFramework
@model List<TBLNOTLAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>NOT ID</th>
        <th>DERS</th>
        <th>ÖĞRENCİ</th>
        <th>SINAV 1</th>
        <th>SINAV 2</th>
        <th>SINAV 3</th>
        <th>PROJE</th>
        <th>ORTALAMA</th>
        <th>DURUM</th>
        <th>NOT GÜNCELLE</th>
    </tr>
    <tbody>
        @foreach (var not in Model)
        {
        <tr>
            <td>@not.NOTID</td>
            <td>@not.TBLDERSLER.DERSAD</td>
            <td>@not.TBLOGRENCILER.OGRAD @not.TBLOGRENCILER.OGRSOYAD</td>
            <td>@not.SINAV1</td>
            <td>@not.SINAV2</td>
            <td>@not.SINAV3</td>
            <td>@not.PROJE</td>
            <td>@not.ORTALAMA</td>
            <td>@not.DURUM</td>
            <td><a href="/Sinav/NotlariGetir/@not.NOTID" class="btn btn-warning btn btn-sm">Güncelle</a></td>
        </tr>
        }
    </tbody>
</table>

<a href="/Sinav/YeniSinav" class="btn btn-primary">Yeni Sınav Girişi</a>

